---
import AppSwitcher from "@components/appswitcher/AppSwitcher";
import AppSwitcherSkeleton from "@components/appswitcher/AppSwitcherSkeleton";
import Observability from "@components/observability/Observability";
import GuidePanel from "@components/welcomepanel/WelcomePanel";
import Layout from "@layouts/Layout.astro";
import styles from "./_index.module.css";

const userInfo = Astro.locals.userInfo;

const currentHour = new Date().getHours();
const greeting =
  currentHour < 10
    ? "God morgen"
    : currentHour < 12
      ? "God formiddag"
      : currentHour < 18
        ? "God ettermiddag"
        : "God kveld";

const enableObservability =
  process.env.NAIS_CLUSTER_NAME === "dev-gcp" ||
  process.env.NAIS_CLUSTER_NAME === "prod-gcp";
---

<Layout title="Hjem">
  <div class={styles["home"]}>
    <div class={styles["home__content"]}>
      <GuidePanel greeting={greeting} name={userInfo.name} />
      <AppSwitcher server:defer adGroups={userInfo.groups} client:only="react">
        <AppSwitcherSkeleton slot="fallback" />
      </AppSwitcher>
    </div>
  </div>
  {enableObservability && <Observability client:only="react" />}
</Layout>
