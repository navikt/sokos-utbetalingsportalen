---
import { BodyLong, GuidePanel, Heading } from '@navikt/ds-react';
import AppSwitcherSkeleton from 'src/components/skeleton/AppSwitcherSkeleton';
import AppSwitcher from '../components/appswitcher/AppSwitcher';
import Layout from '../layouts/Layout.astro';
import styles from './_index.module.css';

const userInfo = Astro.locals.userInfo;
---

<Layout title="Hjem">
  <div class={styles['home']}>
    <div class={styles['home-guidepanel']}>
      <div class={styles['home-heading']}>
        <Heading level="1" size="large" spacing>
          God dag, {userInfo.name}
        </Heading>
      </div>
      <GuidePanel poster>
        <Heading level="2" size="small" spacing>
          Informasjon om utbetalingsportalen
        </Heading>
        <BodyLong spacing>
          Utbetalingsportalen er en ny platform som på sikt skal overta
          funksjoner fra Økonomiportalen og Abetal i en ny og forbedret versjon.
        </BodyLong>
      </GuidePanel>
    </div>
    <div>
      <AppSwitcher
        server:defer
        adGroups={userInfo.adGroups}
        client:only="react"
      >
        <AppSwitcherSkeleton slot="fallback" />
      </AppSwitcher>
    </div>
  </div>
</Layout>
