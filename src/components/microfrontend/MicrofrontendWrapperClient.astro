---
import Layout from "@layouts/Layout.astro";
import NoAccess from "@pages/NoAccess.astro";
import { hasAccessToApp } from "@utils/accessControl";
import { getMicrofrontendConfig } from "@config/apps.config";
import Microfrontend from "./Microfrontend";
import { getServerSideEnvironment } from "@utils/server/environment";

type Props = {
  appName: string;
};

const hostname = Astro.url.hostname;
const appConfig = getMicrofrontendConfig(Astro.props.appName);
const appAccess = hasAccessToApp(Astro.locals.userInfo.groups, appConfig);
const environment = getServerSideEnvironment();

function fetchBundle(hostname: string, appName: string, env: string) {
  if (env === "local") {
    return `http://localhost:3000/${appName}/bundle.js`;
  }
  return `https://${hostname}/${appName}/bundle.js`;
}
---

<Layout title={appConfig.title}>
  {
    appAccess ? (
      <Microfrontend
        url={fetchBundle(hostname, appConfig.naisAppName, environment)}
        client:only="react"
      />
    ) : (
      <NoAccess />
    )
  }
</Layout>
