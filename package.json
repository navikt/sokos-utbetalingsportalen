{
  "name": "sokos-utbetalingsportalen",
  "version": "1.0.0",
  "description": "Utbetalingsportalen container",
  "type": "module",
  "scripts": {
    "postinstall": "cd server && pnpm install",
    "dev": "vite --mode mock",
    "build": "tsc && vite build --base=/ --outDir dist",
    "test": "vitest",
    "lint": "eslint",
    "stylelint": "stylelint '**/*.css'",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "author": "navikt",
  "license": "MIT",
  "dependencies": {
    "@grafana/faro-web-sdk": "^1.12.2",
    "@navikt/aksel-icons": "^7.5.3",
    "@navikt/ds-css": "^7.5.3",
    "@navikt/ds-react": "^7.5.3",
    "react-error-boundary": "^4.1.2",
    "react-router": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eik/rollup-plugin": "^4.0.64",
    "@eslint/js": "^9.15.0",
    "@navikt/aksel-stylelint": "^7.5.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.5",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "5.4.11"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "ignoreFiles": "dist/**/*"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "tailwindConfig": "tailwind.config.cjs",
          "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=22.11.0",
    "pnpm": ">=9.4.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
